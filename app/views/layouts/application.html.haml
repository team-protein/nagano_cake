!!!
%html
  %head
    %title ながのCAKE
    = csrf_meta_tags
    = csp_meta_tag
    %meta{name: "viewport", content: "width=device-width, initial-scale=1, maximum-scale=1"}
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track": "reload"
    = javascript_include_tag "application", "data-turbolinks-track": "reload"
  %body
    %header.border-bottom
      %nav.navbar.navbar-expand-lg.navbar-light.bg-light
        %a.navbar-brand{href: "/"} 
          %span ながのCAKE
        - if admin_signed_in? && request.fullpath.include?("admin")
          = render "layouts/admin_signed_in_nav"
        - if admin_signed_in? == false && request.fullpath.include?("admin")
          = render "layouts/before_signed_in_nav"
        - if customer_signed_in? && request.fullpath.exclude?("admin")
          = render "layouts/signed_in_nav"
        - if customer_signed_in? == false && request.fullpath.exclude?("admin")
          = render "layouts/before_signed_in_nav"
        
    %main   
      %p#notice
        = notice
      = yield

    %footer.border-top

