<h2>マイページ</h2>
<h4>登録情報</h4>
<%= link_to "編集する", edit_customers_path, {class: "btn btn-success"} %>
<table class="table table-inverse">
  <tr><th>氏名</th><td><%= "#{current_customer.last_name} #{current_customer.first_name}" %></td></tr>
  <tr><th>カナ</th><td><%= "#{current_customer.last_name_kana} #{current_customer.first_name_kana}" %></td></tr>
  <tr><th>郵便番号</th><td><%= "#{current_customer.postcode}" %></td></tr>
  <tr><th>住所</th><td><%= "#{current_customer.address}" %></td></tr>
  <tr><th>電話番号</th><td><%= "#{current_customer.phone_number}" %></td></tr>
  <tr><th>メールアドレス</th><td><%= "#{current_customer.email}" %></td></tr>
</table>
<h4>配送先</h4>
<%= link_to "一覧を見る", addresses_path, {class: "btn btn-primary", data: {"turbolinks" => false}}  %>
<h4>注文履歴</h4>
<%= link_to "一覧を見る", orders_path, {class: "btn btn-primary"} %>

<%= link_to "簡易ログアウトボタン", destroy_customer_session_path, method: :delete %>