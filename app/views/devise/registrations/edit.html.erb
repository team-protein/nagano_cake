<h2>会員情報編集</h2>

<%= form_with model: @customer, url: customer_registration_path do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
   <div class="field">
    <%= f.label "氏名" %><br />
    <%= f.text_field :last_name, autofocus: true %>
    <%= f.text_field :first_name, autofocus: true %>
  </div>
  
   <div class="field">
    <%= f.label "フリガナ" %><br />
    <%= f.text_field :last_name_kana, autofocus: true %>
    <%= f.text_field :first_name_kana, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :postcode, "郵便番号" %><br/>
    <%= f.text_field :postcode, autofocus: true, id: "user_postcode" %>
  </div>
  
  <div class="field">
    <%= f.label :address, "住所" %> <br/>
    <%= f.text_field :address, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :phone_number, "電話番号" %><br/>
    <%= f.text_field :phone_number, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="actions">
    <%= f.submit "編集内容を保存" %>
  </div>
<% end %>

<%= link_to "退会する", customers_delete_confirm_path, {class: "btn btn-danger"} %>

<%= link_to "Back", :back %>
