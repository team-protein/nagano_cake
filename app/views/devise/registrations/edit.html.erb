<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h2 class="mb-5">会員情報編集</h2>

      <%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        
        <table class="table table-borderless">
          <tr><th>氏名</th><td><%= f.text_field :last_name, placeholder: "(姓)" %></td><td><%= f.text_field :first_name, placeholder: "(名)" %></td></tr>
          <tr><th>フリガナ</th><td><%= f.text_field :last_name_kana, placeholder: "(セイ)" %></td><td><%= f.text_field :first_name_kana, placeholder: "(メイ)" %></td></tr>
          <tr><th>郵便番号</th><td><%= f.text_field :postcode %></td></tr>
          <tr><th>住所</th><td colspan="2"><%= f.text_field :address, size: 50 %></td></tr>
          <tr><th>電話番号</th><td><%= f.text_field :phone_number %></td></tr>
          <tr><th>メールアドレス</th><td><%= f.text_field :email %></td></tr>
        </table>
        
        <div class="actions">
          <%= f.submit "編集内容を保存", class: "btn btn-success px-5 py-1" %>
        </div>
        
      <% end %>
    </div>
    <div class="col-md-2 d-flex flex-column-reverse offset-2">
      <%= link_to "退会する", customers_delete_confirm_path, {class: "btn btn-danger"} %>
    </div>
  </div>
</div>
