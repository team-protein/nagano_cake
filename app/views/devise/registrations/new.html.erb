<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h2 class="mb-4">新規会員登録</h2>

      <div class="new-registration-form">
        
        <%= form_with model: resource, url: customer_registration_path, local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        
         <table class="table table-borderless">
          <tr><th>氏名</th><td><%= f.text_field :last_name %></td><td><%= f.text_field :first_name %></td></tr>
          <tr><th>フリガナ</th><td><%= f.text_field :last_name_kana %></td><td><%= f.text_field :first_name_kana %></td></tr>
          <tr><th>メールアドレス</th><td><%= f.text_field :email %></td></tr>
          <tr><th>郵便番号(ハイフンなし)</th><td><%= f.text_field :postcode %></td></tr>
          <tr><th>住所</th><td colspan="2"><%= f.text_field :address, size: 50 %></td></tr>
          <tr><th>電話番号</th><td><%= f.text_field :phone_number %></td></tr>
          <tr><th>パスワード(6文字以上)</th><td><%= f.password_field :password %></td></tr>
          <tr><th>パスワード(6文字以上)</th><td><%= f.password_field :password_confirmation %></td></tr>
          <tr><th></th><td><%= f.submit "新規登録", class: "btn btn-success px-5" %></td></tr>
        </table>
        
        <% end %>
        
      </div>
      
      <h3>既に登録済みの方</h2>
      <%= render "devise/shared/links" %>
      
    </div>
  </div>
</div>

