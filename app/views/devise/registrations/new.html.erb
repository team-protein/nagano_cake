<h2>新規会員登録</h2>

<%= form_with model: @customer, url: customer_registration_path  do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
  <div class="field">
    <%= f.label :last_name, "（姓）" %>
    <%= f.text_field :last_name, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :first_name, "（名）" %>
    <%= f.text_field :first_name, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :last_name_kana, "（セイ）" %>
    <%= f.text_field :last_name_kana, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :first_name_kana, "(メイ）" %>
    <%= f.text_field :first_name_kana, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="field">
    <%= f.label :postcode, "郵便番号（ハイフンなし）" %><br/>
    <%= f.text_field :postcode, autofocus: true, id: "user_postcode" %>
  </div>
  
  <div class="field">
    <%= f.label :address, "住所" %> <br/>
    <%= f.text_field :address, autofocus: true, class: "address", id: "user_address_street" %>
  </div>
  
  <div class="field">
    <%= f.label :phone_number, "電話番号（ハイフンなし）" %><br/>
    <%= f.text_field :phone_number, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>
  
  <div class="field">
    <%= f.label :password_confirmation, "パスワード（確認用）" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class: "btn btn-success" %>
  </div>
<% end %>

<h2>既に登録済みの方</h2>
<%= render "devise/shared/links" %>
