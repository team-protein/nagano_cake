<div class="container">
  <div class="row">
    <div class="col-md-10">
      <h3>配送先編集</h3>
        <%= form_with model: @address, url: address_path, local: true do |f| %>
          <%= render "layouts/errors", obj: @address %>
          
          <div class="field">
            <%= f.label :postcode, "郵便番号（ハイフンなし）" %><br/>
            <%= f.text_field :postcode %>
          </div>
          
          <div class="field">
            <%= f.label :address, "住所" %> <br/>
            <%= f.text_field :address %>
          </div>
          
          <div class="field">
            <%= f.label :dear, "宛名" %><br/>
            <%= f.text_field :dear %>
          </div>
        
          <div class="actions">
            <%= f.submit "変更内容を保存", class: "btn btn-success" %>
          </div>
        <% end %>
    </div>
  </div>
</div>