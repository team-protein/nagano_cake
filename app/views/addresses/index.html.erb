<div class="container ">
  <div class="row mb-5">
    <div class="col-md-10">
      <h3 class="mb-5 ml-5">配送先登録/一覧</h3>
      <%= form_with model: @address, url: addresses_path, local: true do |f| %>
        <%= render "layouts/errors", obj: @address %>
        
         <div class="form">
            <div class="label"><%= f.label :postcode, "郵便番号（ハイフンなし）" %></div>
            <div class="form-box"><%= f.text_field :postcode, id: "postcode-form" %></div>
          </div>
          
          <div class="form">
            <div class="label"><%= f.label :address, "住所" %></div>
            <div class="form-box"><%= f.text_field :address, id: "address-form" %></div>
          </div>
          
          <div class="form">
            <div class="label"><%= f.label :dear, "宛名" %></div>
            <div class="form-box"><%= f.text_field :dear %></div>
            <div class="actions"><%= f.submit "新規登録", class: "btn btn-success px-5" %></div>
          </div>
        
      <% end %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-10">
      <table class="table table-bordered">
        <thead class="thead-light">
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <% current_customer.addresses.each do |address| %>
          <tr>
            <td><%= address.postcode %></td>
            <td><%= address.address %></td>
            <td><%= address.dear %></td>
            <td>
              <%= link_to "編集する", edit_address_path(address.id), {class: "btn btn-success btn-edit btn-address", data: {"turbolinks" => false}} %>
              <%= button_to "削除する", address_path(address.id), {method: :delete, class: "btn btn-danger ml-3"}  %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
